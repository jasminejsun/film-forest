<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loading_screen_text">

        <item name="android:fontFamily">
            @font/prompt_bold
        </item>

        <item name="android:textSize">
            40sp
        </item>

        <item name="android:textColor">
            @color/white
        </item>

    </style>

    <style name="title_text">

        <item name="android:textSize">
            35sp
        </item>

        <item name="android:textColor">
            @color/dark_green
        </item>

    </style>

    <style name="header_text">

        <item name="android:fontFamily">
            "@font/roboto_bold"
        </item>

        <item name="android:textSize">
            27sp
        </item>

        <item name="android:textColor">
            @color/dark_green
        </item>

    </style>

    <style name="secondary_header_text">

        <item name="android:fontFamily">
            "@font/roboto_bold"
        </item>

        <item name="android:textSize">
            27sp
        </item>

        <item name="android:textColor">
            @color/light_green
        </item>

    </style>

    <style name="body_text">

        <item name="android:fontFamily">
            "@font/roboto_medium"
        </item>

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            @color/black
        </item>

    </style>

    <style name="button_text">

        <item name="android:fontFamily">
            "@font/roboto_medium"
        </item>

        <item name="android:textSize">
            27sp
        </item>

        <item name="android:textColor">
            @color/white
        </item>

    </style>

    <style name="unselected_body_text">

        <item name="android:fontFamily">
            "@font/roboto_medium"
        </item>

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            @color/light_grey
        </item>

    </style>

    <style name="description_header_text">

        <item name="android:fontFamily">
            "@font/roboto_bold"
        </item>

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            @color/light_green
        </item>

    </style>

    <style name="required_text">

        <item name="android:fontFamily">
            "@font/roboto"
        </item>

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            @color/salmon
        </item>

    </style>

    <style name="optional_text">

        <item name="android:fontFamily">
            "@font/roboto"
        </item>

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            @color/light_grey
        </item>
    </style>


    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">
            wrap_content
        </item>

        <item name="android:layout_height">
            wrap_content
        </item>

        <item name="android:textAppearance">
            @style/button_text
        </item>

        <item name="android:background">
            @drawable/button
        </item>

        <item name="android:focusable">
            true
        </item>
        <item name="android:clickable">
            true
        </item>
    </style>
</resources>