<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="144dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/logo"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logo_removebg_preview" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/menu_header_text"
            android:textAlignment="center"
            android:textColor="#214A00"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/friends_image"
            android:layout_width="268dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp"
            android:contentDescription="@string/friends_picture"
            app:srcCompat="@drawable/undraw_horror_movie_3988" />

        <Button
            android:id="@+id/main_screen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/dark_green"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingRight="17dp"
            android:paddingBottom="10dp"
            android:text="@string/surprise_button"
            android:textAppearance="@style/button_text"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/main_screen_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/dark_green"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingRight="17dp"
            android:paddingBottom="10dp"
            android:text="@string/start_search_button"
            android:textAppearance="@style/button_text"
            app:cornerRadius="30dp" />

    </LinearLayout>
</ScrollView>